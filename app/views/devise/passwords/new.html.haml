.span4.offset3{:style => "margin-top:3em;"}
	%h2 Forgot your password?
	= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "well" }) do |f|
		= f.error_notification
		.form-inputs
			= f.input :email, :required => true, :label => "Email Address"
		.form-actions{:style => "padding-left:0;"}
			= f.button :submit, "Send me reset password instructions"
	/ = render "devise/shared/links"
