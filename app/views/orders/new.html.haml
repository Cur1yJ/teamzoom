
- if params[:option] == "true"
  = render "shared/orders/choose_option"
%h1{:style => "text-align: center;margin: 1em 0;"} Create an account to get started with TeamZoom.
.row
  .span-order.offset2.form-wrapper
    .progress-indicator
      .round-wrapper{:style => "width: 80%; overflow: auto; margin: auto;"}
        .round 1
        .line
        .round.active 2
        .line
        .round 3
        .line
        .round 4
      .text-wrapper{:style => "width: 100%; overflow: auto; margin: auto;"}
        = render(:partial => 'shared/row')

    #render-payment-on-registering
      - if params[:option] || !(params[:action] == "new")
        = render "shared/orders/form", :order => @order, :url => orders_path, :method => :post, :remote => true, :individual_game => false, :schedule_id => "", :reload_page => true
        .clearfix
    %div{:style=>"margin: 10px 0;"}
      %center= submit_tag "Next", :class => "btn btn-primary", :id => "btn_payment"

